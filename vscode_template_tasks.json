{
	"version": "2.0.0",
	"tasks":
	[
	  {
		"label": "Build all plugins",
		"type": "shell",

		"presentation":
		{
		  "panel": "new"
		},

		"osx":
		{
			"command": "python3"
		},

		"linux":
		{
			"command": "python3"
		},

		"windows":
		{
			"command": "python"
		},

		"args":
		[
			"${workspaceFolder}/build_all.py",
			"/path/to/spcomp"
		],

		"problemMatcher":
		{
			"owner": "sp",
			"fileLocation": "absolute",
			"pattern":
			{
				"regexp": "^(.*)\\((.+)\\)\\s:\\s(((warning|error|fatal error)\\s\\d+):\\s.*)$",
				"file": 1,
				"line": 2,
				"severity": 5,
				"message": 3
			}
		},

		"group":
		{
			"kind": "build",
			"isDefault": true
		}
	  }
	]
  }
